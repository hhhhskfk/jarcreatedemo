<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="18dp"
        android:src="@drawable/ic_back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="SAI验证"
        android:textSize="19sp"
        android:textColor="#323232"/>
    
    <ImageView
        android:id="@+id/iv_sai_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_sai_start"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/layout_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_sai_state"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_sai_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/shape_circle_gray"
            android:gravity="center"
            android:drawablePadding="12dp"
            android:text="开始验证"
            android:textSize="13sp"
            android:textColor="#a0a0a0"/>
        <TextView
            android:id="@+id/tv_sai_wait"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/shape_circle_gray"
            android:gravity="center"
            android:drawablePadding="12dp"
            android:text="等待验证"
            android:textSize="13sp"
            android:textColor="#a0a0a0"/>
        <TextView
            android:id="@+id/tv_sai_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/shape_circle_gray"
            android:gravity="center"
            android:drawablePadding="12dp"
            android:text="验证码送达"
            android:textSize="13sp"
            android:textColor="#a0a0a0"/>
        <TextView
            android:id="@+id/tv_sai_success"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/shape_circle_gray"
            android:gravity="center"
            android:drawablePadding="12dp"
            android:text="验证通过"
            android:textSize="13sp"
            android:textColor="#a0a0a0"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_edit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_below="@id/layout_state"
        android:orientation="horizontal"
        android:background="@drawable/shape_sai_edit">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="手机号码"
            android:textSize="15sp"
            android:textColor="#666"/>

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:textSize="15sp"
            android:textColor="#666"
            android:inputType="phone"
            android:imeOptions="actionDone"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_sai_btn_delete"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:enabled="false"/>
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_sai"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/layout_edit"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/selector_sai_btn"
        android:enabled="false"
        android:text="开始验证"
        android:textSize="15sp"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/tv_sai_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sai"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="24dp"
        android:text="开始验证"
        android:textSize="13sp"
        android:textColor="#666"
        android:visibility="gone"/>

</RelativeLayout>